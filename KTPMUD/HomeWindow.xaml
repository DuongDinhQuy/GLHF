<Window x:Class="KTPMUD.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTPMUD"
        mc:Ignorable="d"
        Title="HomeWindow" Height="600" Width="360">
    <Grid>
        <StackPanel Margin="20" Background="White">
            <TextBlock Text="Ứng dụng Quản lý chi tiêu" FontWeight="Bold" FontSize="20" Margin="0,10,0,20" HorizontalAlignment="Center"/>
            
            <!-- Nút 1 -->
            <Button Content="Tạo Thu/Chi" Click="btnIncomeAndExpense_Click" Width="200" Height="60" Margin="0,0,0,20" Background="NavajoWhite"/>

            <!-- Nút 2 -->
            <Button Content="Thống kê" Click="btnList_Click" Width="200" Height="60" Margin="0,0,0,20" Background="NavajoWhite"/>

            <!-- Nút 3 -->
            <Button Content="Báo cáo" Click="btnReport_Click" Width="200" Height="60" Margin="0,0,0,20" Background="NavajoWhite"/>

            <!-- Nút 4 -->
            <Button Content="Tài khoản" Click="btnAccount_Click" Width="200" Height="60"  Background="NavajoWhite"/>
        </StackPanel>
    </Grid>

</Window>

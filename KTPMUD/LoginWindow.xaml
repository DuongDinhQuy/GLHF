<Window x:Class="KTPMUD.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTPMUD"
        mc:Ignorable="d"
        Title="LoginWindow" Height="600" Width="360">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Đăng nhập" FontWeight="Bold" FontSize="20" Margin="0,10,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Tài khoản:" Height="24"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10" Height="24"/>

            <TextBlock Text="Mật khẩu:" Height="24"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,10" Height="24"/>
            
            <Button Content="Đăng nhập" Click="btnLogin_Click" Width="150" Height="30" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

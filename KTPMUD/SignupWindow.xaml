<Window x:Class="KTPMUD.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTPMUD"
        mc:Ignorable="d"
        Title="SignupWindow" Height="600" Width="360">
    <Grid>
        <StackPanel Margin="20,20,20,20" Grid.RowSpan="2">
            <TextBlock Text="Tạo tài khoản" FontWeight="Bold" FontSize="20" Margin="0,10,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Tài khoản:" Height="20"/>
            <TextBox x:Name="txtAcc" Margin="0,0,0,10" Height="24"/>



            <TextBlock Text="Mật khẩu:" Height="20"/>
            <TextBox x:Name="txtPass" Margin="0,0,0,10" Height="24"/>



            <TextBlock Text="Tên người dùng:" Height="20"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10" Height="24"/>



            <TextBlock Text="Tuổi:" Height="20"/>
            <TextBox x:Name="txtAge" Margin="0,0,0,10" Height="24"/>



            <TextBlock Text="Giới tính:" Height="20"/>
            <TextBox x:Name="txtGender" Margin="0,0,0,10" Height="24"/>

            <Button Content="Xác nhận" Click="btnConfirm_Click" Width="150" Height="30" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
